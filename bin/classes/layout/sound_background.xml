<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <LinearLayout
        android:id="@+id/linearLayout1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="2dp" >

            <app.maikol.catcam.components.SoundButton
                android:id="@+id/btnSound1"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_gravity="bottom"
                android:layout_marginLeft="2dp"
                android:alpha="0.8"
                android:background="#77000000"
                android:scaleType="fitCenter"
                android:src="@drawable/btn1" />

            <app.maikol.catcam.components.SoundButton
                android:id="@+id/btnSound3"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_marginLeft="2dp"
                android:layout_marginRight="2dp"
                android:alpha="0.8"
                android:background="#77000000"
                android:scaleType="fitEnd"
                android:src="@drawable/btn2" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearLayout3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >

            <app.maikol.catcam.components.SoundButton
                android:id="@+id/btnSound2"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_marginLeft="2dp"
                android:alpha="0.8"
                android:background="#77000000"
                android:scaleType="fitCenter"
                android:src="@drawable/btn3" />

            <app.maikol.catcam.components.SoundButton
                android:id="@+id/btnSound4"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_marginBottom="2dp"
                android:layout_marginLeft="2dp"
                android:layout_marginRight="2dp"
                android:alpha="0.8"
                android:background="#77000000"
                android:scaleType="fitStart"
                android:src="@drawable/btn4" />

        </LinearLayout>

    </LinearLayout>

    <app.maikol.catcam.lists.SoundListView
        android:id="@+id/listViewSound"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:background="#EE111111" >
    </app.maikol.catcam.lists.SoundListView>

</RelativeLayout>