<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/RelativeLayout1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:tag="USER" >

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerInside"
        android:src="@drawable/icono4" />

    <ImageButton
        android:id="@+id/usermenu_to_left"
        android:layout_width="50dp"
        android:layout_height="200dp"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:background="@null"
        android:scaleType="fitXY"
        android:src="@drawable/button_to_usermenu" />

    <ImageButton
        android:id="@+id/usermenu_to_right"
        android:layout_width="50dp"
        android:layout_height="200dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:background="@null"
        android:scaleType="fitXY"
        android:src="@drawable/button_to_usermenu" />

    <Button
        android:id="@+id/usermenu_new_photos_button"
        android:layout_width="160dp"
        android:layout_height="50dp"
        android:layout_centerVertical="true"
        android:layout_marginRight="30dp"
        android:layout_toLeftOf="@+id/usermenu_to_right"
        android:background="@drawable/user_button1"
        android:padding="10dp"
        android:text="New photos!"
        android:textColor="#FFFFFF"
        android:textStyle="bold" />

    <Button
        android:id="@+id/usermenu_my_images"
        android:layout_width="160dp"
        android:layout_height="50dp"
        android:layout_alignBaseline="@+id/usermenu_new_photos_button"
        android:layout_alignBottom="@+id/usermenu_new_photos_button"
        android:layout_marginRight="16dp"
        android:layout_toLeftOf="@+id/usermenu_new_photos_button"
        android:background="@drawable/user_button1"
        android:padding="10dp"
        android:text="My cloud images"
        android:textColor="#FFFFFF"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/txtUsername"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/usermenu_to_right"
        android:layout_centerHorizontal="true"
        android:ems="10"
        android:hint="Username"
        android:imeOptions="actionDone"
        android:inputType="text"
        android:textColorHint="#FFFFFF" >

        <requestFocus />
    </EditText>

</RelativeLayout>